<%- include('header', {message}); -%>

<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-8 mx-auto">
          <form method="POST" action="/modifica-documento" id="modify-form" class="col-6 mx-auto">
            <h1>Modifica Documento</h1>           
            <div class="form-group">
              <div class="form-group">
                <label for="id_documento"></label>
                <input type="hidden" name="id_documento" class="form-control" value="<%= documento.id_documento%>"/>
              </div>
              <label for="text">Aggiorna Titolo</label>
              <input type="text" name="title_documento" class="form-control" value="<%= documento.nome_documento%>"/>
            </div>
            <div class="form-group">
              <label for="text">Aggiorna Note documento</label>
              <input type="text" name="note_documento" class="form-control" value="<%= documento.note_documento%>"/>
            </div>
            
            <button type="submit" class="btn btn-warning">Invia</button>
          </form>
        </div>
    </div>
</main>

<%- include('footer'); -%>