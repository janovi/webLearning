<%- include('header', {message}); -%>

<main class="container-fluid mt-3">
  <div class="row">
    <div class="col-8 mx-auto">
      <form method="POST" action="/insert-corso" id="addcorso-form" class="col-6 mx-auto" enctype="multipart/form-data">
        <h1>Inserisci nuovo corso</h1> 
        <div class="mb-3 form-group">
          <label for="formFile" class="form-label">Carica immagine del corso</label>
          <input class="form-control" name="imgCorso" type="file" id="formFile" >
        </div>            
        <div class="form-group">
          <label for="text">Titolo</label>
          <input type="text" name="titolo" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="text">Descrizione</label>
          <input type="text" name="descrizione" class="form-control" required />
        </div>
        <div class="form-group">
          <label for="text">Categoria</label>
          <input type="text" name="categoria" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-warning">Aggiungi</button>
      </form>
    </div>
  </div>
</main>

<%- include('footer'); -%>