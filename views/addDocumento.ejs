<%- include('header', {message}); -%>

<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-8 mx-auto">
          <form method="POST" action="/add-documento" id="adddocument-form" class="col-6 mx-auto" enctype="multipart/form-data">
            <h1>Inserisci nuovo documento</h1> 
            <input type="hidden" name="id_corso" class="form-control" value="<%= corso.id_corso%>"/>
            <div class="mb-3 form-group">
              <label for="formFile" class="form-label">Inserire il documento</label>
              <input class="form-control" name="documento" type="file" id="formFile" required>
            </div>
            <div class="form-group">
              <label for="text">Nome del Documento</label>
              <input type="text" name="nome" class="form-control" required />
            </div>
            <div class="form-group">
              <label for="text">Descrizione</label>
              <input type="text" name="descrizione" class="form-control" required />
            </div>
            
            <button type="submit" class="btn btn-warning">Aggiungi</button>
          </form>
        </div>
    </div>
</main>

<%- include('footer'); -%>